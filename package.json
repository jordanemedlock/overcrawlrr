{
  "name": "overcrawlrr",
  "version": "0.0.1",
  "description": "",
  "author": "psyko-gh",
  "license": "MIT",
  "private": true,
  "npmPublish": false,
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "build": "tsc && tsc-alias",
    "postbuild": "copyfiles schema/schema.json build/schema.json",
    "lint": "eslint \"./**/*.ts\"",
    "format:fix": "prettier ./src --write --cache",
    "format": "prettier ./src --check --cache",
    "format-docs": "prettier ./docs --check --cache",
    "format-docs:fix": "prettier ./docs --write --cache",
    "start": "tsx src/index.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.9.0",
    "@semantic-release/github": "^10.1.7",
    "@types/cookie": "^0.5.1",
    "@types/cors": "^2.8.13",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.2",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.4.1",
    "@types/xml2js": "^0.4.14",
    "copyfiles": "^2.4.1",
    "eslint": "^9.9.0",
    "husky": "^9.1.5",
    "jest": "^29.6.1",
    "prettier": "3.3.3",
    "semantic-release": "^24.1.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/js-yaml": "^4.0.5",
    "ajv": "^8.17.1",
    "axios": "^1.4.0",
    "better-ajv-errors": "^1.2.0",
    "cookie": "^0.5.0",
    "cors": "^2.8.5",
    "croner": "^6.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "node-cache": "^5.1.2",
    "tsx": "^3.12.7",
    "winston": "^3.9.0",
    "xml2js": "^0.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@core/(.*)$": [
        "<rootDir>/src/$1"
      ]
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": ":heavy_check_mark: This ${issue.pull_request ? 'pull request is included' : 'issue has been resolved'} in released version `${nextRelease.version}`",
          "failComment": false
        }
      ]
    ]
  }
}
